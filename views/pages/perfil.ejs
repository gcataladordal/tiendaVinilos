<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>

  <header>
    <%- include('../partials/header'); %>
  </header>


  <main>
    <div class="container my-5 d-flex justify-content-evenly">
      <button type="button" class="btn btn-outline-secondary bg-dark">Historial</button>
      <button type="button" class="btn btn-outline-secondary bg-dark" href="/modDatos">Modificar mis datos</button>
    </div>
    <div class="container d-flex justify-content-center">
      <h4 class="display-6">Sugerencias para ti</h4>
    </div>
    <div class="container my-4">
      <div class="row justify-content-around">
        <% for(let i=0 ; i < 4 ; i++) { %>
          <div class="col-lg mt-3">
            <div class="card" style="width: 18rem;">
              <form action="/verProducto" method="POST">
                <input type="image" class="card-img-top" src=" <%= infoVinilos[i].imgUrl %> " alt="Submit Form">
                <input type="hidden" name="id_vinilo" value="<%= infoVinilos[i].id_vinilo %>">

                <div class="card-body">
                  <h5 class="card-title">
                    <%= infoVinilos[i].titulo %>
                  </h5>
                  <p class="card-text">
                    <%= infoVinilos[i].autor %>
                      <br>
                      <%= infoVinilos[i].precio %>
                  </p>
                  <a href="#" class="btn btn-dark" onclick="addProducto('<%= infoVinilos[i].id_vinilo %>')">AÃ±adir al
                    carrito</a>
                </div>
              </form>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>